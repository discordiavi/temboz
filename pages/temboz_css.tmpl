body {
  line-height:10pt;
  font-family: verdana, arial, sans-serif;
  font-size:9pt;
  line-height:11pt;
  padding:0px;
  margin:0px;
}
a.headline {
  font-size:12pt;
  font-weight:bold;
  line-height:14pt;
}
.source {
  font-size:10pt;
  line-height:12px;
  color: gray;
}
.up, .down {
  float: right;
}
.article {
  border: solid 1px gray;
  margin-bottom: 12px;
  padding: 6px;
  overflow: hidden;
}

p.menu {
  margin: 20px;
}

.col1 .article {
  margin-left:  20px;
  margin-right: 10px;
}

.col2 .article {
  margin-right: 20px;
  margin-left:  10px;
}

.col { width: 43%; float: left; margin: 5px}
.col1 {
  width: 50%;
  float: left;
  padding: 0px;
  margin: 0px;
  border: 0px;
  overflow: hidden;
}
.col2 {
  width: 50%;
  float: right;
  padding: 0px;
  margin: 0px;
  border: 0px;
  overflow: hidden;
}
th.sort {
  background:#ddf;
  color: red;
  font-weight: bold;
}
th.nonsort {
  background:#eee;
  font-weight: normal;
}
